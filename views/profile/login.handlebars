
{{#if error}}
<div class="row">
    <div class="col-4 m-auto">
        <div class="alert alert-danger  alert-dismissible fade show">
            {{error}}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    </div>
</div>
{{/if}}

{{#if success}}
<div class="row">
    <div class="col-4 m-auto">
        <div class="alert alert-success" role="alert">
            {{success}}

        </div>
    </div>
</div>
{{/if}}

<div class="row">
    <div class="col-4 m-auto">
        <div class="neon-red-girl">
            <img src="../public/images/photo-1513829596324-4bb2800c5efb.jpg" alt="Cool Music Image"/>
        </div>
        <form id="login-form" method="POST" action="/access/login">
            <div class="form-group">
                <label for="email_address">Email</label>
                <input type="email" required name="email_address" class="form-control" id="email_address">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" class="form-control" id="password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
            <div class="form-group">
                <span>Don't have an account? <a href="/access/signUpPage">Click here to sign up</a></span>
            </div>
            <div class="form-group">
                <span> <a href="/profile/forgetPassword.handlebars">Forgot password?</a></span>
            </div>
        </form>
    </div>
</div>
