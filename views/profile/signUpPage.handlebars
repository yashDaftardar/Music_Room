
<div class="row">
    <div class="col-4 m-auto">
        <div id="error" class="error"></div>
    </div>
</div>

{{#if error_message}}
<div class="row">
    <div class="col-4 m-auto">
        <div class="alert alert-danger alert-dismissible fade show">
            {{error_message}}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    </div>
</div>
{{/if}}

<div class="registration">
    <form method="post" action="/access/registration" id="myForm">
        <div class="form-group">
            <label for="full_name">Full Name</label>
            <input id="full_name" name="full_name" required class="form-control" placeholder="Full name"
                type="text">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input id="email" name="email_address" required class="form-control" placeholder="Email address"
                type="email">
                    <span id="u-hint">Warning: All email addresses will be converted to lowercase, e.g. XYZ@mail.com will become xyz@mail.com.</span>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" name="password" required class="form-control" placeholder="Create password"
                type="password">
            <span id="p-hint">Requirements: Password length must be 6 to 15 characters long with at least one number and special character.</span>
        </div>
        <div class="form-group">
            <label for="genres">Genres</label>
            <p>Select up to 3 genres</p>
            <select id="genres" name="genres_ids[]" class="form-control multiple-checkboxes" multiple>
                {{!-- <option value="" selected> Select genres</option> --}}
                {{#each genre_data}}
                <option value={{this._id}}>{{this.genreName}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group ">
            <label for="artists">Artists</label>
            <p>Select up to 3 artists</p>
            <select id="artists" name="artist_ids[]" class="form-control multiple-checkboxes" multiple>
                {{!-- <option value="" selected> Select artist</option> --}}
                {{#each artist_data}}
                <option value={{this._id}}>{{this.artistName}}</option>
                {{/each}}
            </select>
        </div>
        <div>
            <button class="btn btn-primary" type="submit" id="submit">Submit</button>
            <button class="btn btn-primary" type="reset" id="reset">Reset</button>
        </div>
    </form>
</div>
