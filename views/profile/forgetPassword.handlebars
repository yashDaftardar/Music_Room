
{{#if error}}
<div class="row">
    <div class="col-4 m-auto">
        <div class="alert alert-danger  alert-dismissible fade show">
            {{error}}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    </div>
</div>
{{/if}}

<div class="row">
    {{#if email_data}}
    <div class="col-4 m-auto">
        <div class="form-group">
            <h4>Please provide a new password.</h4>
        </div>
        <form id="login-form" method="POST" action="/access/changePassword">
            <input name="user_id" value={{user_id}} type="hidden">
            <div class="form-group">
                <label for="title">Email</label>
                <input type="email" required name="email_address" disabled class="form-control" id="email_address"
                    value="{{email_data}}">
            </div>
            <div class="form-group">
                <label for="title">New Password</label>
                <input type="password" name="new_password" class="form-control" id="new_password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

        </form>
    </div>

    {{else}}
    <div class="col-4 m-auto">
        <div class="form-group">
            <h4>Please provide a valid email address.</h4>
        </div>
        <form id="login-form" method="POST" action="/access/forgetPassword">
            <div class="form-group">
                <label for="title">Email</label>
                <input type="email" required name="email_address" class="form-control" id="email_address">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </form>
    </div>
    {{/if}}
</div>